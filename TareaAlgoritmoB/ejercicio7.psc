Algoritmo ejercicio7
	//INGRESAR UN NUMERO Y DETERMINAR SI ES NEUTRO POSITIVO O NEGATIVO
	Definir NUM1 Como Real;
	LEER NUM1;
	
	SI NUM1 =0 Entonces
		Escribir "EL NUMERO ES NEUTRO";
	SiNo
		SI NUM1>0 Entonces
			Escribir "EL NUMERO ES POSITIVO";
		SiNo
			SI NUM1 <0 Entonces
				Escribir "EL NUMERO ES NEGATIVO";
				
			FinSi
		FinSi
	FinSi
	
FinAlgoritmo
